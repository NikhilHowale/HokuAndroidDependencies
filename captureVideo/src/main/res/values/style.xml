<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Universal.Widget.ProgressBar" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/ic_loading</item>
        <item name="android:indeterminateDuration">1000</item>
    </style>

    <style name="VideoTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="AppTheme.FullScreen" parent="VideoTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>