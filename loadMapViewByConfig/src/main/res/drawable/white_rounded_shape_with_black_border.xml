<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">

            <solid android:color="#22000000" />

            <corners android:radius="8dp"></corners>

        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="0.5dp"
        android:right="0.5dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/screen_bg_white" />

            <corners android:radius="8dp"></corners>
            <stroke android:color="@color/color_gray_primary"
                android:width="1dp"/>

        </shape>
    </item>

</layer-list>
